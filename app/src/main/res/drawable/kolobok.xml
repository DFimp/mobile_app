<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Тело Колобка -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFEB3B" /> <!-- Желтый цвет -->
            <size android:width="100dp" android:height="100dp" />
            <stroke android:width="4dp" android:color="#FFC107" /> <!-- Окантовка -->
        </shape>
    </item>

    <!-- Левый глаз -->
    <item
        android:left="28dp"
        android:top="28dp">
        <shape android:shape="oval">
            <solid android:color="#000000" /> <!-- Черный цвет глаза -->
            <size android:width="10dp" android:height="10dp" />
        </shape>
    </item>

    <!-- Правый глаз -->
    <item
        android:right="60dp"
        android:top="30dp">
        <shape android:shape="oval">
            <solid android:color="#000000" />
            <size android:width="10dp" android:height="10dp" />
        </shape>
    </item>

    <!-- Улыбка -->
    <item
        android:top="60dp"
        android:left="25dp">
        <shape android:shape="oval">
            <size android:width="50dp" android:height="25dp" />
            <solid android:color="#FFEB3B" /> <!-- Заливка улыбки в цвет тела -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Контур улыбки -->
            <corners android:topLeftRadius="50dp" android:topRightRadius="50dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

</layer-list>
